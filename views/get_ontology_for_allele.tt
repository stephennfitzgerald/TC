<!DOCTYPE html>
<html>

<script>

function goBack() 
 {
   window.history.back();
 }

function goHome()
 {
   window.location = '/';   
 }
</script>


<head>
<style>

P {
 font-size: 13px;
 font-family:'Courier New';
} 

.view_info input[type="submit"] {
 color: black;
 background: #BDECB6;
 display: inline;
}

table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th,td {
    padding: 15px;
    text-align: center;
}

</style>
</head>

<body background="images/zmp.jpg">
<div id="page">
      <div id="sidebar">
      </div>

      <div id="content">
        <div id="header">
         <p>
          <button onclick="goHome()">Home</button>
           &nbsp;&nbsp;&nbsp;&nbsp;
          <button onclick="goBack()">Back</button>
         <p>
          <table>
           <% IF exp_list && ! chosen_allele_id %>
            <% row_index = 1 %>
            <h1>Choose an experiment</h1>
            <% FOREACH exp_std IN exp_list %>
             <% IF row_index % 2 %>
              <tr bgcolor='#CEECF5'>
             <% ELSE %>
              <tr bgcolor='#FFFFFF'>
             <% END %>
              <form action="<% get_ontology_for_allele_url %>" method="get">
               <% field_num = 0 %>
                <% FOREACH field in exp_std %>
                 <% IF row_index > 1 && field_num == 0 %> 
                  <td> <input type="radio" name="exp_id" value="<% field %>">  </td>
                 <% ELSIF field_num > 0 %>
                  <td><% field %></td>
                 <% ELSE %>
                  <td> Select </td>
                 <% END %>
                  <% field_num = field_num + 1 %>
                <% END %>
               </tr>
               <% row_index = row_index + 1 %> 
              <% END %>
              </table><p><p>
              <input type="submit" value="Submit"> 
               &nbsp;&nbsp;&nbsp;&nbsp;
              <input type="reset" value="Clear">
             </form>
          <% ELSIF allele_info && ! chosen_allele_id %>
           <table> 
            <h1>Choose an allele</h1>
            <% row_index = 0 %>
            <% FOREACH allele IN allele_info %>
              <% IF row_index % 2 %>
               <tr bgcolor='#CEECF5'>
              <% ELSE %>
               <tr bgcolor='#FFFFFF'>
              <%END %>
              <form action="<% get_ontology_for_allele_url %>" method="get">
               <% col_num = 0 %>
               <% FOREACH col in allele %>
                <% IF col_num > 1 && col_num < 5%>
                 <td>
                  <% col %>
                 </td>
                <% ELSIF col_num == 1 && row_index == 0 %>
                  <td>Select</td>
                <% ELSIF col_num == 1 && row_index > 0 %>
                  <td> <input type="radio" name="chosen_allele_id" value="<% allele.1 %>">  </td>
                <% ELSIF col_num == 5 && row_index > 0 %>
                  <% term_depth = "TD::" _ allele.1 %>
                  <td> <input type="number" name="<% term_depth %>" min=1> </td> 
                <% ELSIF col_num == 5 %>
                 <td> <% col %> </td>
                <% END %>
                 <% col_num = col_num + 1 %>
              <% END %>
             </tr>
             <% row_index = row_index + 1 %>
            <% END %>
            </table>
          <p><p>
         <input type="submit" value="Submit">
          &nbsp;&nbsp;&nbsp;&nbsp;
         <input type="reset" value="Clear">
         </form>
        <% ELSIF chosen_allele_id %>
         <table>
          <h1>Add ontology terms</h1>
          <% row_index = 0 %>
          <form action="<% add_ontology_eq_terms_url %>" method="get">
           <% col_num = 0 %>
           <% FOREACH rec in allele_info %>
            <% IF row_index % 2 %>
              <tr bgcolor='#CEECF5'>
            <% ELSE %>
              <tr bgcolor='#FFFFFF'>
            <%END %>
            <% FOREACH col in rec %>
             <td><% col %></td>
            <% END %>
           <% row_index = row_index + 1 %>
          <% END %> 
          <% WHILE term_depth %>
           <tr><td><% allele_info.1.0 %></td><td><% allele_info.1.1 %></td><td><% allele_info.1.2 %></td>
           <% input_cols = 4 %>
            <% WHILE input_cols %>
             <% cell_id = "CID::" _ term_depth _ "::" _ input_cols %>
              <td><input type="text" name="<% cell_id %>"></td>
              <% input_cols = input_cols - 1 %>
            <% END %>
           <% term_depth = term_depth - 1 %>
          <% END %>
         </table>
         <p><p>
         <input type="submit" value="Submit">
          &nbsp;&nbsp;&nbsp;&nbsp;
         <input type="reset" value="Clear">
        <% END %>
        </form>
       </div>
     </div>
</div>
</body>
</html>

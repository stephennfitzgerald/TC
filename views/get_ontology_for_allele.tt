<!DOCTYPE html>
<html>

<script>

function goBack() 
 {
   window.history.back();
 }

function goHome()
 {
   window.location = '/';   
 }
</script>


<head>
<style>

P {
 font-size: 13px;
 font-family:'Courier New';
} 

.view_info input[type="submit"] {
 color: black;
 background: #BDECB6;
 display: inline;
}

table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th,td {
    padding: 15px;
    text-align: center;
}

</style>
</head>

<body background="images/zmp.jpg">
<div id="page">
      <div id="sidebar">
      </div>

      <div id="content">
        <div id="header">
         <p>
          <button onclick="goHome()">Home</button>
         <p>
          <table>
           <% row_index = 1 %>
           <% IF exp_list %>
            <h1>Choose an experiment</h1>
            <% FOREACH exp_std IN exp_list %>
             <% IF row_index % 2 %>
              <tr bgcolor='#CEECF5'>
             <% ELSE %>
              <tr bgcolor='#FFFFFF'>
             <% END %>
              <form action="<% get_ontology_for_allele_url %>" method="get">
               <% field_num = 0 %>
                <% FOREACH field in exp_std %>
                 <% IF row_index > 1 && field_num == 0 %> 
                  <td> <input type="radio" name="exp_id" value="<% field %>">  </td>
                 <% ELSIF field_num > 0 %>
                  <td><% field %></td>
                 <% ELSE %>
                  <td> Select </td>
                 <% END %>
                  <% field_num = field_num + 1 %>
                <% END %>
               </tr>
               <% row_index = row_index + 1 %> 
              <% END %>
              </table><p><p>
              <input type="submit" value="Submit"> 
               &nbsp;&nbsp;
              <input type="reset" value="Clear">
             </form>
          <% ELSIF allele_info %>
           <table> 
            <h1>Choose an allele</h1>
            <% row_index = 0 %>
            <% FOREACH allele IN allele_info %>
              <% IF row_index % 2 %>
               <tr bgcolor='#CEECF5'>
              <% ELSE %>
               <tr bgcolor='#FFFFFF'>
              <%END %>
              <form action="<% add_ontology_eq_terms_url %>" method="post">
               <% col_num = 0 %>
               <% FOREACH col in allele %>
                <% IF col_num > 1 %>
                 <td>
                  <% col %>
                 </td>
                <% ELSIF col_num == 1 && row_index == 0 %>
                  <td>Select</td>
                <% ELSIF col_num == 1 && row_index > 0 %>
                  <td> <input type="radio" name="chosen_allele_id" value="<% allele.1 %>">  </td>
                <% END %>
                 <% col_num = col_num + 1 %>
              <% END %>
             </tr>
             <% row_index = row_index + 1 %>
            <% END %>
            </table>
          <p>
         <input type="submit" value="Submit">
         </form>
        <% END %>
       </div>
     </div>
</div>
</body>
</html>

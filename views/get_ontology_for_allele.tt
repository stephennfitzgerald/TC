<!DOCTYPE html>
<html>

<script>

function goBack() 
 {
   window.history.back();
 }

function goHome()
 {
   window.location = '/';   
 }
</script>


<head>
<style>

P {
 font-size: 13px;
 font-family:'Courier New';
} 

.view_info input[type="submit"] {
 color: black;
 background: #BDECB6;
 display: inline;
}

table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th,td {
    padding: 15px;
    text-align: center;
}

</style>
</head>

<body background="images/zmp.jpg">
<div id="page">
      <div id="sidebar">
      </div>

      <div id="content">
        <div id="header">
         <p>
          <button onclick="goHome()">Home</button>
         <p>
         <h1>Add ontology terms to an allele</h1>
          <table>
           <% row_index = 1 %>
           <% FOREACH exp IN allele_info %>
             <% IF row_index % 2 %>
              <tr bgcolor='#CEECF5'>
             <% ELSE %>
              <tr bgcolor='#FFFFFF'>
             <%END %>
             <form action="<% add_ontology_eq_terms_url %>" method="post">
              <% col_num = 0 %>
              <% FOREACH col in exp %>
               <% allele_name %> 
               <td>
               <% IF col %>
                <% col %>
                <% col_num = col_num + 1 %>
                <% IF col == 'snp_id' %>
                 <p>eg.(Zv9:20:23870485)
                <% ELSIF col == 'entity1' %>
                 <p>eg.(ZFA:0001094)
                <% ELSIF col == 'entity2' %>
                 <p>eg.(BSPO:0000084)
                <% ELSIF col == 'quality' %>
                 <p>eg.(PATO:0001997)
                <% ELSIF col == 'tag' %>
                 <p>eg.(PATO:0000460)
                <% END %>
               <% ELSIF col_num != 8 %>
                <% col_name = allele_info.0.$col_num _ "_" _ exp.3 %>
                <input type="text" name="<% col_name %>" required>
                <% col_num = col_num + 1 %>
               <% ELSE %>
                <% col_name = allele_info.0.$col_num _ "_" _ exp.3 %>
                <input type="text" name="<% col_name %>">
                <% col_num = col_num + 1 %>
               <% END %>
               </td>
             <% END %>
            </tr>
            <% row_index = row_index + 1 %>
           <% END %>
           </table>
          <p>
          <input type="submit" value="Submit">
          </form>
        </div>
      </div>
</div>
</body>
</html>

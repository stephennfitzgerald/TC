<!DOCTYPE html>
<html>

<head>
<style>

table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th,td {
    padding: 15px;
}
th {
    text-align: left;
}

</style>
</head>

<body>
<div id="page">
      <div id="sidebar">
      </div>

      <div id="content">
        <div id="header">
          <h1>Samples for Experiment <% experiment_id %></h1>
          <table>
          <% row_index = 1 %>
          <% FOREACH smp IN samples %>
           <% field_index = 0 %>
           <tr>
           <% FOREACH field IN smp %>
            <% field_index = field_index + 1 %>
            <% NEXT IF field_index == 2 %> <!-- skip writing the experiment_id -->

            <% IF field_index == 9 && row_index > 1 %> <!-- Embryo_collection_well_number -->
             <td><% field %>
              <form action="<% embryo_collection_info_url %>" method=get style="display:inline;">
                <input type="hidden" name="embryo_collection_info" value="<% smp.8 %>" />
              <input type=submit value="get info"></form>

             <% ELSIF field_index == 10 && row_index > 1 %> <!-- RNA_dilution_well_number -->
              <td><% field %>
              <form action="<% rna_dilution_info_url %>" method=get style="display:inline;">
               <input type="hidden" name="rna_dilution_info" value="<% smp.9 %>" />
              <input type=submit value="get info"></form>

             <% ELSE %>
             <td><% field %>
             </td>
            <% END %> 
           <% END %>
           </tr>
           <% row_index = row_index + 1 %>
          <% END %>
        </div>
      </div>
</div>
</body>
</html>

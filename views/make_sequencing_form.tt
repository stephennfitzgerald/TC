<!DOCTYPE html>
<html>

<script>

function goBack() 
 {
   window.history.back();
 }

function goHome()
 {
   window.location = '/';   
 }
</script>


<head>
<style>

P {
 font-size: 13px;
 font-family:'Courier New';
} 

.view_info input[type="submit"] {
 color: black;
 background: #BDECB6;
 display: inline;
}

table, th, td {
    border: 1px solid white;
    padding: 15px;
    border-collapse: collapse;
    text-align: left;
}

</style>
</head>

<body background="images/zmp.jpg">
<div id="page">
      <div id="sidebar">
      </div>

      <div id="content">
        <div id="header">
         <p>
          <button onclick="goHome()">Home</button>
         <p>
         <h1>Make a sequencing form</h1>
           <p>
          <table>
           <% FOREACH row IN all_seq_plates %>
            <tr><td>
            <% row.2.split(',').join('::') %></td>
            <% IF row.1 %>
             <td><a href="<% row.1 %>" download><button type="button">excel &#8595;</button></a></td>
             <td></td>
            <% ELSE %>
             <form action="<% get_sequencing_report_url %>" method="post" enctype="multipart/form-data">
              <input type="hidden" name="new_seq_plate_name" value="<% row.0 %>">
              <td><input type="file", name="sanger_sample_file"></td>
              <td><input type="submit" value="Submit"></td>
             </form> 
            <% END %>
            </tr>
           <% END %>
           </table>
        </div>
      </div>
</div>
</body>
</html>
